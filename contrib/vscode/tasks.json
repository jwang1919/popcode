  "version": "2.0.0",
  "tasks": [
    {
      "label": "start development server",
      "type": "shell",
      "command": "yarn start",
      "presentation": {
        "focus": false,
        "panel": "dedicated"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "run tests in watch mode",
      "dependsOn": [
        "run jest tests in watch mode",
        "run karma tests in watch mode"
      ],
      "type": "shell",
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "run karma tests in watch mode",
      "type": "shell",
      "command": "yarn autotest.karma",
      "presentation": {
        "group": "test",
        "panel": "dedicated"
      },
      "group": "test"
    },
    {
      "label": "run jest tests in watch mode",
      "type": "shell",
      "command": "yarn autotest.jest",
      "presentation": {
        "group": "test",
        "focus": true,
        "panel": "dedicated"
      },
      "group": "test"
    },
    {
      "label": "run all tests and checks",
      "type": "shell",
      "command": "yarn test",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "reset development environment",
      "type": "shell",
      "command": "tools/reset",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "run static server with production build settings",
      "type": "shell",
      "command": "yarn run static",
      "problemMatcher": [],
      "group": "build"
    }
  ]
}
